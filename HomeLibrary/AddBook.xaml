<Window x:Class="HomeLibrary.AddBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeLibrary"
        mc:Ignorable="d"
        Title="Add new book" Height="400" Width="600" MinWidth="500" MinHeight="350"
        ResizeMode="CanMinimize">
    <Window.Resources>
        <Style TargetType="Border" x:Key="BasicBorder">
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="Margin" Value="5"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="FontFamily" Value="Bahnschrift Serif"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Padding" Value="5"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
        </Style>
        <Style TargetType="Label" x:Key="SubTitle">
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="FontFamily" Value="Bahnschrift Serif"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"></Setter>
            <Setter Property="FontFamily" Value="Bahnschrift Serif"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Padding" Value="5"></Setter>
        </Style>
        <Style TargetType="Label" x:Key="Property">
            <Setter Property="FontSize" Value="12"></Setter>
            <Setter Property="FontFamily" Value="Bahnschrift Serif"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="12"></Setter>
            <Setter Property="FontFamily" Value="Bahnschrift Serif"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
        </Style>
        <Style TargetType="TextBox" x:Key="Value">
            <Setter Property="FontSize" Value="12"></Setter>
            <Setter Property="FontFamily" Value="Bahnschrift Serif"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Margin" Value="50 0 0 0"></Setter>
        </Style>
        <Style TargetType="TextBox" x:Key="BookName">
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="FontFamily" Value="Bahnschrift Light"></Setter>
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Padding" Value="3"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.2*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="1.3*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1.5*"></ColumnDefinition>
            <ColumnDefinition Width="0.1*"></ColumnDefinition>

        </Grid.ColumnDefinitions>

        <TextBox Grid.Row="0" Grid.Column="1"
               Text="Book name..." 
               Style="{StaticResource BookName}"
               Name="tbBookName"></TextBox>

        <Border Grid.Row="1" Grid.RowSpan="6"
                Grid.Column="1"
                Style="{StaticResource BasicBorder}">
            <Image></Image>
        </Border>
        
        <Label Content="Click to upload"
                Grid.Row="1" 
                Grid.RowSpan="6"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Cursor="Hand"
               Background="LightGray"
               BorderBrush="Black"
               BorderThickness="0.5"></Label>


        <Border Grid.Row="6" Grid.Column="2"
                Style="{StaticResource BasicBorder}"></Border>

        <CheckBox Grid.Row="1" Grid.Column="2"
                  Content="Lent"></CheckBox>
        <Label Grid.Row="2" Grid.Column="2"
                  Content="Author: "
               Style="{StaticResource Property}"></Label>
        <TextBox Grid.Row="2" Grid.Column="2"
               Name="tbxAuthor"
               Style="{StaticResource Value}">
        </TextBox>

        <Label Grid.Row="3" Grid.Column="2"
                  Content="Genre:"
               Style="{StaticResource Property}"></Label>
        <TextBox Grid.Row="3" Grid.Column="2"
               Name="tbxGenre"
               Style="{StaticResource Value}">
        </TextBox>

        <Label Grid.Row="4" Grid.Column="2"
                  Content="Year:"
               Style="{StaticResource Property}"></Label>
        <TextBox Grid.Row="4" Grid.Column="2"
               Name="tbxYear"
               Style="{StaticResource Value}"
               Margin="40 0 240 0">
        </TextBox>

        <Label Grid.Row="5" Grid.Column="2"
                  Content="Description:"
               Style="{StaticResource Property}"></Label>
        <TextBox Grid.Row="6" Grid.Column="2"
                 TextWrapping="Wrap"
                 Margin="5"></TextBox>
        <Button Grid.Row="7" Grid.Column="1"
                Content="Back">
        </Button>
        <Button Grid.Row="7" Grid.Column="2"
                Content="Add"
                Background="DarkSeaGreen"
                HorizontalAlignment="Right"
                Margin="0 0 5 0">
        </Button>
    </Grid>
</Window>
